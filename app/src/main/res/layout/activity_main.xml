<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qr_rest_tdu.MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TDU Zahlung Erhaltungssystem"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />
        android:text="TextView" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:text="QR Code Einlesen" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Inhalt des QR Codes ist: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />
        android:text="Inhalt der QR Codes ist " />

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/viewfinder_laser" />

    <CheckBox
        android:id="@+id/shuttle_checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shuttle" />

    <CheckBox
        android:id="@+id/mensa_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensa" />

    <Button
        android:id="@+id/post_btn"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:text="Post Req. " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rückgabe der Post-Anfrage"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />

    <TextView
        android:id="@+id/HTTPresult"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/netz_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prüfe Netzverbindung" />

    <TextView
        android:id="@+id/text_network"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="TextView" />

</LinearLayout>